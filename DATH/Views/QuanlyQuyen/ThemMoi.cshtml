@model DATH.Models.Quyen

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Views/LayOut/QuantriLayout.cshtml";
}

<h2>Thêm quyền</h2>
<p style="font-size:11px">Quản lý quyền/Thêm mới</p>

@using (Html.BeginForm())
{
    <div>
        <p><b>Mã Quyền</b></p>
        <p>@Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })</p>
    </div>

    <div style="margin-top:10px">
        <p><b>Tên Quyền</b></p>
        <p>@Html.EditorFor(model => model.TenQuyen, new { htmlAttributes = new { @class = "form-control" } })</p>
    </div>

    <div style="margin-top:10px">
        <input id="btntao" type="submit" value="Tạo" />
    </div>
}

<style>
    #btntao:hover {
        background-color: #0094ff;
    }
</style>
